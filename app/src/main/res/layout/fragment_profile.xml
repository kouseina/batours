<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".tabs.profile.ProfileFragment">

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="left"
            android:paddingHorizontal="20dp">

            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:fontFamily="@font/playfairdisplay_semibold"
                android:textSize="42sp"
                android:textColor="@color/black_800" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginTop="4dp"
                android:text="Your best profile at Batours"
                android:fontFamily="@font/sfprodisplay_regular"
                android:textAlignment="textStart"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/img_avatar"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@color/grey"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/circleImageView"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="vertical"
                android:paddingVertical="12dp"
                android:paddingHorizontal="20dp"
                android:background="@drawable/profile_edit_text">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="Name Lengkap"
                    android:textColor="#5E5E5E"
                    android:fontFamily="@font/sfprodisplay_medium"
                    android:textAlignment="textStart"/>

<!--                <EditText-->
<!--                    android:layout_marginTop="4dp"-->
<!--                    android:id="@+id/et_fullName"-->
<!--                    android:inputType="textPersonName"-->
<!--                    android:hint="Masukkan nama lengkap"-->
<!--                    android:layout_width="fill_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_centerInParent="true"-->
<!--                    android:fontFamily="@font/sfprodisplay_medium"-->
<!--                    android:textSize="16sp"-->
<!--                    android:textColor="#454545"-->
<!--                    android:textColorHint="#A7A7A7"-->
<!--                    android:background="@color/white"-->
<!--                    android:lines="1"/>-->

                <TextView
                    android:id="@+id/tv_fullName"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sfprodisplay_medium"
                    android:textSize="16sp"
                    android:textColor="#454545"
                    android:text="..."
                    android:textAlignment="textStart"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:paddingVertical="12dp"
                android:paddingHorizontal="20dp"
                android:background="@drawable/profile_edit_text">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="Email"
                    android:textColor="#5E5E5E"
                    android:fontFamily="@font/sfprodisplay_medium"
                    android:textAlignment="textStart"/>

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sfprodisplay_medium"
                    android:textSize="16sp"
                    android:textColor="#454545"
                    android:text="..."
                    android:textAlignment="textStart"/>

<!--                <EditText-->
<!--                    android:layout_marginTop="4dp"-->
<!--                    android:inputType="textEmailAddress"-->
<!--                    android:id="@+id/et_email"-->
<!--                    android:hint="Masukkan email"-->
<!--                    android:layout_width="fill_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_centerInParent="true"-->
<!--                    android:fontFamily="@font/sfprodisplay_medium"-->
<!--                    android:textSize="16sp"-->
<!--                    android:textColor="#454545"-->
<!--                    android:textColorHint="#A7A7A7"-->
<!--                    android:background="@color/white"-->
<!--                    android:lines="1"/>-->

            </LinearLayout>

            <Button
                android:layout_marginTop="100dp"
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textAllCaps="false"
                android:fontFamily="@font/sfprodisplay_bold"
                android:textColor="@color/white"
                android:padding="13dp"
                android:textSize="18sp"
                app:backgroundTint="@null"
                android:elevation="6dp"
                android:background="@drawable/logout_button" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>